<body>
    <!-- Include the JavaScript file -->
    <script type="text/javascript" src="/static/js/app.js"></script>

    <!-- Close button -->
    <button class="btn-close btn btn-sm">Ã—</button>

    <input type="checkbox" id="menu-toggle">
    <div class="sidebar">
        <div class="side-header">
            <h3><span>Smart Hygiene </span></h3>
        </div>

        <div class="side-content">
            <div class="profile">
                <div class="profile-img bg-img" ></div>
                <h4>Admin</h4>
                <h4>saloni@gmail.com</h4>
            </div>

            <div class="side-menu">
                <ul>
                    <li>
                        <a class="<%=path==='/admin/profile'?'active' : '' %>" href="/admin/profile" >
                            <span class="las la-address-card"></span>
                            <small>Profile</small>
                        </a>
                    </li>
                    <li>
                        <a class="<%=path==='/admindevices'?'active' : '' %>" href="/admindevices" >
                            <span class="la la-tachometer"></span>
                            <small>All Devices</small>
                        </a>
                    </li>
                    <li>
                        <a class="<%=path==='/addusers'?'active' : '' %>" href="/addusers" >
                            <span class="las la-plus-square"></span>
                            <small>Add User</small>
                        </a>
                    </li>
                    <li>
                        <a class="<%=path==='/adminusers'?'active' : '' %>" href="/adminusers" >
                            <span class="las la-user-alt"></span>
                            <small>Users</small>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="main-content">

        <header>
            <div class="header-content">
                <label for="menu-toggle">
                    <span class="las la-bars"></span>
                </label>

                <div class="header-menu">
                    <label for="">
                        <span class="las la-search"></span>
                    </label>

                    <div class="notify-icon">
                        <span class="las la-envelope"></span>
                        <span class="notify">4</span>
                    </div>

                    <div class="notify-icon">
                        <span class="las la-bell"></span>
                        <span class="notify">3</span>
                    </div>

                    <div class="user">
