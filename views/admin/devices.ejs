<%-include('../includes/adminbar.ejs')%>

        <main>

            <div class="page-header">
                <h1>Devices</h1>
            </div>

            <div>
              <!-- devices   -->
              <main>
                <% if (devices.length > 0) { %>
                    <div class="grid">
                        <% let cnt=1 %>
                        <% for (let device of devices) { %>
                                <div class="device-info">
                                    <p>Device No: <%=cnt%></p>
                                    <p>Device Name: <%=device.deviceName%></p>
                                    <p>Device Location: <%=device.location%></p>
                                    <p>Device Status: Online</p>
                                    <%cnt=cnt+1%>
                                </div>
                        <%}%>
                    </div>
                    <% } else { %>
                        <h1>No Devices Found</h1>
                        <% } %>
            </main>
            </div>
        </main>
    </div>

    

</body>

</html>     